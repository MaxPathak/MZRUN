int Creator_getPaths(char paths[][50]) {
	struct dirent *de;
	int i, cnt=0, s;
	char ext[] = ".TXT";
	DIR *dr = opendir("MZRUN/TXTFILES");
	if(dr == NULL) return 0;
	while((de = readdir(dr)) != NULL)  {
		s = strlen(de->d_name);
		for(i = s-4; i < s; i++) {
			if(de->d_name[i] != ext[i-(s-4)])	break;
		}
		if(i==s) {
			strcpy(paths[cnt++], de->d_name);
			printf("%s\n", paths[cnt-1]);
		}
	}
	closedir(dr);
	return cnt;
}

